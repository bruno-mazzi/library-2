<div class="wrapper">
    <div class="wrapper__inner">
        <h2 class="title title--2">Toutes les lectures</h2>
        <div class="booksList">
            {% for post in collections.post %}
                <article class="book book--details">
                    <a href="{{ post.url }}" class="book__link">
                        <img src="assets/img/cover/{{ post.data.couverture }}-th.webp"
                             alt="couverture de {{ post.data.title }}" loading="lazy" class="book__visual">
                    </a>

                    <div class="book__title">
                        <h3 class="title title--3">{{ post.data.title }}</h3>
                        <h4 class="title title--4">{{ post.data.author }}</h4>
                    </div>

                    <footer class="book__footer">
                        <p class="text text--sm">Date de publication : <span class="time" data-time="{{ post.date | niceDateJs }}">{{ post.date | niceDate }}</span></p>
                        <p class="text text--sm">Catégorie :
                            {% for cat in post.data.categories %}
                                <a href="/categories/{{ cat | slugify }}/index.html" class="link">{{ cat }}</a>
                            {% endfor %}
                        </p>
                    </footer>
                </article>
            {% endfor %}
        </div>
        <nav class="booksList__pagination pagination">
            <button class="pagination__btn btn btn--secondary" id="prev-button" title="Page précédente" aria-label="Page précédente">
                &lt;
            </button>

            <div class="pagination__numbers">

            </div>
            <button class="pagination__btn btn btn--secondary" id="next-button" title="Page suivante" aria-label="Page suivante">
                &gt;
            </button>
        </nav>
    </div>
</div>