<ul class="booksList">
    {% for post in collections.post %}
        <li class="booksList__item book">
            <div class="book__img">
                <img src="assets/img/cover/{{ post.data.couverture }}-th.webp" alt="couverture de {{ post.data.title }}" class="img-resp" loading="lazy">
            </div>
            <a href="{{ post.url }}" class="book__link">
                <h3 class="title title--2 book__content">{{ post.data.title }}</h3>
                <p class="book__content">Auteur : {% for auteur in post.data.auteurs %}{{ auteur }}
                    {% endfor %}
                </p>
                <p class="book__content">Date : <span class="time" data-time="{{ post.date | niceDateJs }}">{{ post.date | niceDate }}</span></p>
                <p class="book__content">Editeur :  {% for editeur in post.data.editeurs %}{{ editeur }}
                    {% endfor %}
                </p>
                <p class="book__content">Langue : {% for langue in post.data.langues %}{{ langue }}
                    {% endfor %}
                </p>
                <p class="book__content">Tags : {% for cat in post.data.categories %}{{ cat }}
                    {% endfor %}
                </p>
            </a>
        </li>
    {% endfor %}
</ul>